<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
    id="WebApp_ID"
    version="2.5"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" >

    <display-name>SMART2</display-name>

    <description>SMART2 web application</description>

    <!-- smart home setting -->
    <context-param>
        <param-name>SMART_HOME</param-name>
		<param-value>/app/webapp/SMART_HOME</param-value>
		<!-- <param-value>C:\Users\regar\git\CodyDoctor-Server\bizmob.coway.SMART_HOME</param-value> -->    	        
    </context-param>
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>file:///${SMART_HOME}/conf/applicationcontext-*.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <!-- log4j setting -->
    <context-param>
        <param-name>log4jConfigLocation</param-name>
        <param-value>file:///${SMART_HOME}/conf/server/log4j.properties</param-value>
    </context-param>
    <context-param>
        <param-name>log4jRefreshInterval</param-name>
        <param-value>60000</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
    </listener>
  	
    <!-- session timeout setting -->
    <session-config>
        <session-timeout>120</session-timeout>
    </session-config>

    <!-- dispatcher servlet setting -->
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>/WEB-INF/controller-*.xml</param-value>
        </init-param>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <!-- http filter setting -->
    <filter>
        <filter-name>httpMethodFilter</filter-name>
        <filter-class>org.springframework.web.filter.HiddenHttpMethodFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>httpMethodFilter</filter-name>
        <servlet-name>dispatcher</servlet-name>
    </filter-mapping>

    <!-- encoding filter setting -->
    <filter>
        <filter-name>encodingFilter</filter-name>
        <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>encodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
    <!-- service pause filter setting -->
    <filter>
    	<filter-name>ServicePause</filter-name>
    	<filter-class>common.filter.ServicePauseFilter</filter-class>
    	<init-param>
    		<param-name>configFile</param-name>
    		<param-value>file:///${SMART_HOME}/conf/server/service_pause.properties</param-value>
    		<!-- <param-value>file:///${SMART_HOME}/conf/server/service_pause.properties</param-value>  -->
    	</init-param>
    </filter>
    <filter-mapping>
    	<filter-name>ServicePause</filter-name>
    	<url-pattern>/*</url-pattern>
    </filter-mapping>


	<!-- security filter -->
	<filter>
		<filter-name>SIMPLE</filter-name>
		<filter-class>com.mcnc.bizmob.filter.SimpleFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>SIMPLE</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping> 
	

    <welcome-file-list>
        <welcome-file></welcome-file>
    </welcome-file-list>

    <mime-mapping>
        <extension>manifest</extension>
        <mime-type>text/cache-manifest</mime-type>
    </mime-mapping>

    
	<error-page>
		<error-code>400</error-code>
		<location>/error/err_400.jsp</location>
	</error-page>
	<error-page>
		<error-code>404</error-code>
		<location>/error/err_404.jsp</location>
	</error-page>
	<error-page>
		<error-code>403</error-code>
		<location>/error/err_403.jsp</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/error/err_500.jsp</location>
	</error-page>
	<error-page>
		<exception-type>java.lang.Throwable</exception-type>
		<location>/error/error/jsp</location>
	</error-page>

</web-app>